angular.module('vnCreateViewModule', [],function () {})
.factory('vnCreateViewFactory', function( 
	$rootScope, 
	$timeout, 
	vnTaskCreateFactory,
	vnWorkflowFactory,
	vnAnnouncementsFactory,
	vnTaskFactory ){
	var factory = {};
	var model;

	factory.setModel = function( value ){
		model = value
		$rootScope.$broadcast( "CREATE_VIEW_UPDATED" );
	};

	factory.getModel = function(){
		return model;
	};

	factory.clearModel = function(){
		factory.setModel({ 
			selectedRecipients: [],
			patientCollection: [],
			documentCollection: [],
			selectedSubjects: -1,
			description: "",
			urgency: "Routine",
			due: null,
			isAnnouncement: false
		});
	};

	factory.sendTask = function( isTask, callback, suppressToasts ){
		var model = factory.getModel();
		var attachments = {};
		attachments.attachedDocs = model.documentCollection;
		attachments.selectedPatients = model.patientCollection;
		var task = vnTaskFactory.buildTask( 
				model.selectedRecipients, 
				model.selectedSubjects, 
				model.description, 
				-1, 
				-1,
				null,
				model.urgency,
				false,
				model.due,
				null );
		if( isTask ){
			
			attachments.trackingSummary = model.trackingSummary;
			attachments.recurrenceSummary = model.recurrenceSummary;
			vnWorkflowFactory.convertTaskToWorkflow( task, attachments, function( workflowedTask ){
				vnWorkflowFactory.saveWorkflow ( workflowedTask, function(){
					vnWorkflowFactory.beginWorkflow( workflowedTask.name, suppressToasts );
					if( callback != null ){
						callback();
					}
				});
			});
		}else{
			task.tasksubjects = {
				label: model.title
			};
			task.status = 0;
			task.comment = [];
			delete task.image;
			delete task.announcement;
			delete task.priority;
			delete task.recurrence;
			delete task.statusimage;
			delete task.subject;
			delete task.subjectid;
			delete task.id;
			vnAnnouncementsFactory.sendAnnouncement( task );
			if( callback != null ){
				callback();
			}
		}
	};

	$rootScope.$on( vnTaskCreateFactory.TASK_CREATE_UPDATED, function( event ){
		var model = factory.getModel();
		model.documentCollection = vnTaskCreateFactory.getModel().documentCollection;
		model.selectedSubjects = vnTaskCreateFactory.getModel().selectedSubjects;
		model.selectedRecipients = vnTaskCreateFactory.getModel().selectedRecipients;
		model.description = vnTaskCreateFactory.getModel().description;
		$timeout( function(){
			factory.setModel( model );
		} );
		
	});
	
	
	factory.clearModel();

	return factory;
})
