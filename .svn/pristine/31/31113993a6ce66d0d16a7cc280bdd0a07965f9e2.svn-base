<div class="vision-dynamo-text-area" ng-controller="vnTextAreaController">
	<vn-css vn-id="vndynamotextarea" vn-css-file="apps/visiondynamo/common/component/textarea/vntextarea.css"></vn-css>
	<div class="vn-label">{{ label }}</div>
	<textarea id="{{ target }}" 
                  ng-blur="handleChange();" 
                  ng-model="value"
                  maxlength="{{ max }}">
	<vn-validation-message
        vn-item-top="0.5em"
        vn-item-left="0em"
        vn-item-height="3.5em"
        vn-item-width="12.5em"
        vn-arrow-top="0em"
        vn-arrow-left="6em"
        vn-arrow-direction="up"
        vn-text="{{message}}"></vn-validation-message>
</div>