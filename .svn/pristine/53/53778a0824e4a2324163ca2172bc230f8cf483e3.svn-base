<!DOCTYPE html>
<vn-css vn-id="vnlogin" vn-css-file="authentication/vnlogin.css"></vn-css>
<div class="login" ng-controller="vnLoginController" onload="init()">
	<div class="splash">
		<img src="../images/Vision_128.png">
	</div>
	<div class="title" >{{name}}</div>
	<md-whiteframe class="md-whiteframe-z2 content" layout layout-align="left center">
		<form novalidate class="simple-form">
	        <md-input-container>
	          <label>Username</label>
	          <input ng-model="user.username">
	        </md-input-container>
	        <md-input-container>
	          <label>Password</label>
	          <input ng-model="user.password" type="password">
	        </md-input-container>
			<div class="error" ng-show="showerror">There was a problem with the login</div>
		</form>
		</md-whiteframe>
	<div class="button-area">
			<div layout="row" layout-align="end center">
		      <md-button class="md-raised" ng-click="handleLoginClick();$event.stopPropagation();">Sign in</md-button>
		    </div>
			
	</div>
	<div class="version">Version {{version}}</div>
</div>