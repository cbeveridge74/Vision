.vision-attachment {

}


.vision-attachment .md-button.md-default-theme.md-fab{
	background-color: #FFF;
	height: 3em;
	width: 3em;
	opacity: 0.5;
}


.vision-attachment .md-button.md-default-theme.md-fab:hover{
	background-color: #FFF;
	opacity: 1;
}

.vision-attachment .md-whiteframe-z1{
	background-color: #FFF;
	text-align: left;
	//font-size: 1.2em;
	padding: 0;
	padding-left: 1em;
}

.vision-attachment .md-whiteframe-z1 .label{
	width: 30em;
	color: #000;
}

.vision-attachment .md-whiteframe-z1 .label,
.vision-attachment .md-whiteframe-z1 img {
	display: inline-block;
	vertical-align: middle;
	margin-top: 0em;
}

.vision-attachment .md-whiteframe-z1 img {
	cursor: pointer;
}

.vision-attachment .md-whiteframe-z1 img{
	width: 1.5em;
}

/* TRACKING */
.vision-attachment .tracking {
	
}

.vision-attachment .md-whiteframe-z1 .tracking img,
.vision-attachment .md-whiteframe-z1 .tracking .label,
.vision-attachment .md-whiteframe-z1 .track {
	display: inline-block;
}

.vision-attachment .md-whiteframe-z1 .tracking img,
.vision-attachment .md-whiteframe-z1 .tracking .label{
	white-space: nowrap;
}

.vision-attachment .md-whiteframe-z1 .track{
	//font-size: 0.8em;
	//margin-right: 0.5em;
}

.vision-attachment .add,
.vision-attachment .edit{
	//background-color: #BBB;
	cursor: pointer;
}
.vision-attachment .add,
.vision-attachment .edit
{
	margin: 1em 0.5em;
	margin-bottom: 1em;
	height: 4em;
	text-align: center;
}

.vision-attachment .add {

}

.vision-attachment .dropzone-container {
	text-align: center;
}

.vision-attachment .dropzone{
	border: dashed 1px #BBB;
	border-radius: 2em;
	width: 3.2em;
	height: 3.2em;
	margin: 0 auto;
	cursor: pointer;
}

.vision-attachment .dropzone img{
	margin-top: 0.5em;
	opacity: 0.5;
	width: 2em;
	height: 2em;
}

.vision-attachment .addition {
	border: dashed 2px #60636A;
	border-radius: 2em;
	display: inline-block;
	vertical-align: middle;
	cursor: pointer;
	opacity: 0.3;
	width: 4em;
	height: 4em;
}



.vision-attachment .vision-tracking {
	position: absolute;
	z-index: 2;
	background-color: #FFF;
	width: 35em;
}

.vision-attachment .vision-tracking  md-input-container {
	padding: 0;
}

.vision-attachment .vision-tracking md-checkbox {
	margin-bottom: 0;
}

.vision-attachment .vision-tracking .md-subheader {
	padding: 5px 0px 5px 16px;
}

.vision-attachment .vision-tracking .md-subheader .md-subheader-content{
	font-size: 1.5em;
}

.vision-attachment .vision-tracking .noactivity{
	display: inline-block;
}

.vision-attachment .vision-tracking .general input.noactivity{
	width: 3em;
}

.vision-attachment .vision-tracking .general md-checkbox,
.vision-attachment .vision-tracking .general input.noactivity {
	margin-right: 4px;
}

.vision-attachment .vision-tracking md-input-container{
	width: 15em;
}

.vision-attachment .vision-tracking .content{
	margin-left: 4em;
	margin-bottom: 4em;
}

.vision-attachment {
	position: relative;
	width: 40em;
	margin: 0 auto;
}

.vision-attachment md-card{
	background-color: #777;
}

.vision-attachment md-card-content {
	//-webkit-transition: height 1s;
	padding-bottom: 0.5em;
}

.vision-attachment .chipsInput {
	height: inherit;
	width: inherit;
	text-indent: 1em;
}

.vision-attachment .chipsInput::-webkit-input-placeholder{
	color: #BBB;
	font-size: 1.2em;
	font-style: italic;
}

.vision-attachment .chips-mini-title, 
.vision-attachment .chips-active-title{
	height: 20px;
	padding: 3px;
	padding-right: 6px;
	padding-left: 0px;
	padding-bottom: 0px;
}


.vision-attachment .triangle-down.top{
	border-top: 10px solid #e4e4e4;
}

.vision-attachment .triangle-down.bottom{
	border-top: 10px solid white;
  	margin-bottom: 2px;
}


.vision-attachment .triangle-container{
	width: 20px;
}

.vision-attachment .triangle-down {
	position: absolute;
	bottom: 3.5em; 
	left: 6em;
	width: 1px;
	height: 1px;
	border-left: 10px solid transparent;
	border-right: 10px solid transparent;
	border-top: 20px solid #FFF;
	-webkit-transition: left 0.3s;

}

.vision-attachment .triangle-down.index0{
	left: 6.5em;
}

.vision-attachment .triangle-down.index1{
	left: 15em;
}

.vision-attachment .triangle-down.index2{
	left: 23.9em;
}

.vision-attachment .triangle-down.index3{
	left: 32.7em;
}

.vision-attachment .chips-mini {
	height: 24px;
}

.vision-attachment .image-default-mini {
	height: 24px;
	width: 24px;
}

.vision-attachment .chips-active {
	width: inherit;
	z-index: 1;
}

.vision-attachment .md-chips {
	width: 100%;
	text-align: left;
}

.vision-attachment .options {
	padding-top: 0.4em;
	margin-bottom: 0;
	margin-bottom: 1em;
}

.vision-attachment .add-label{
	color: #AAA;
	margin-top: 0.4em;
}

.vision-attachment .option {
	color: #CCC;
	font-size: 1.3em;
	cursor: pointer;
	width: 12em;
	position: relative;
	text-align: center;
}

.vision-attachment .option.selected {
	color: #FFF;
}

.vision-attachment .indicator{
	position: absolute;
	height: 1.5em;
	width: 1.5em;
	color: #FFF;
	bottom: 0em;
	text-align: center;

}

.vision-attachment .indicator.patient{
	left: 7em;
}

.vision-attachment .indicator.doc{
	left: 15.5em;
}

.vision-attachment .indicator.track{
	left: 24em;
}

.vision-attachment .indicator.recur{
	left: 32.7em;
}

.vision-attachment .patient-search,
.vision-attachment .attachments,
.vision-attachment .tracking,
.vision-attachment .recurrence {
	width: 100%;
	border: solid 1px #DDD;
	border-radius: 5px;
	background-color: #FFF;
}

.vision-attachment .tracking,
.vision-attachment .recurrence,
.vision-attachment .attachments,
.vision-attachment .patient-search{
	min-height: 6.5em;
	//max-height: 8em;
}

.vision-attachment .tracking{
	
}

.vision-attachment .tracking .summary {
	font-size: 1.2em;
}

.vision-attachment .tracking .edit {
	text-align: center;
}

.vision-attachment .patient-search #chips-list {
	z-index: 2;
}

.vision-attachment .patient-search{
	
}

.vision-attachment .attached{
	border: dashed 1px #BBB;
	width: 25em;
	margin: 0 auto;
	padding: 1em;
	border-radius: 1em;
	text-align: left
}

.vision-attachment .attached .title {
	font-size: 2em;
}

.vision-attachment .attached .subtitle,
.vision-attachment .attached .title {
	color: #20335E;
}

.vision-attachment .attached .close{
	font-size: 2em;
	height: 0.5em;
	width: 100%;
	text-align: right;
	margin-top: -0.5em;
	color: #20335E;
	cursor: pointer;
}

.vision-attachment .attached .close:hover{
	color: #2033FF;
}

.vision-attachment .attach-options {
	position: absolute;
	right: 1em;
	top: 9em;
	display: none;
	background-color: #264586;
	color: #FFF;
	width: 15em;
	text-align: left;
	z-index: 1;
}

.vision-attachment .attach-options.open {
	display: inline-block;
}

.vision-attachment .attach-option {
	font-size: 1.5em;
	padding: 0.6em;
	cursor: pointer;
}

.vision-attachment .attach-option:hover{
	opacity: 0.9;
	background-color: #3B5588;
}


