<!DOCTYPE html>
<vn-css vn-id="vnlogin" vn-css-file="authentication/vnlogin.css"></vn-css>
<div class="login" ng-controller="vnLoginController" onload="init()">
	<div class="splash">
		<img src="../images/Vision_128.png">
	</div>
	<div class="title" >{{name}}</div>
	<div class="well">
		<form novalidate class="simple-form">
			<div class="input-group input-group">
			  <span class="input-group-addon"></span>
			  <input type="text" class="form-control" ng-model="user.username" placeholder="Username" />
			</div>
			<div class="input-group input-group">
			  <span class="input-group-addon"></span>
			  <input type="password" ng-model="user.password" class="form-control" placeholder="Password"/>
			</div>
			<button type="button" class="btn btn-default navbar-btn" ng-click="handleLoginClick();$event.stopPropagation();">Sign in</button>
		</form>
		<div class="version">Version {{version}}</div>
	</div>
</div>