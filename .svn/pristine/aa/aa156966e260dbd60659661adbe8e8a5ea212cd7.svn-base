/* Minimising */
.vision-workflow .task-create.minimise {
	cursor: pointer;
}

.vision-workflow .task-create.minimise .recipients,
.vision-workflow .task-create.minimise .description,
.vision-workflow .task-create.minimise .subject,
.vision-workflow .task-create.minimise .workflow-buttons .ok,
.vision-workflow .task-create .subject-label,
.vision-workflow .task-create .recipients-label
{
	display: none;
}

.vision-workflow .task-create .due-label-min{
	opacity: 0;
}

.vision-workflow .task-create.minimise .subject-label {
	display: inline-block;
	margin: 0;
	width: 15em;
	font-size: 1.5em;
	white-space: nowrap;
	margin-top: -3px;
}

.vision-workflow .task-create .due-label-min{
	margin-top: -0.5em;
}

.vision-workflow .task-create.minimise .recipients-label{
	display: inline-block;
	font-size: 0.8em;
	margin-top: -1.3em;
	margin-bottom: 1em;
	margin-left: -1em;
	color: #777;
}

.vision-workflow .task-create.minimise .due-label-min.set {
	opacity: 1;
	color: #777;
	margin-left: 4px;
	width: 5em;
	font-size: 0.9em;
	white-space: nowrap;
	margin-top: 1px;
	display: block;
}


.vision-workflow .task-create.minimise md-select.md-default-theme .md-select-label{
	font-size: 1.6em;
	border: none;
}

.vision-workflow .task-create.minimise md-select{
	vertical-align: top;
}




