.tasks .description {
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}



.tasks .patientname {
	vertical-align: bottom;
}

.tasks .patientname .name,
.tasks .patientname .count,
.tasks .patientname .icon {
	display: inline-block;
}


