        <div>
            <div class="workflow"><div>{{ item.workflowname }}</div></div>
            <div class="subject"><div>{{ item.shortdescription }}</div></div>
            <div class="patient" ng-click="handlePatientClick( $event );" ng-show="{{ item.patient != null }}">
