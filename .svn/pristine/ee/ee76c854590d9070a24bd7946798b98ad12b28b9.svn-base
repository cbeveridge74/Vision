<vn-css vn-id="vnpeople" vn-css-file="apps/components/people/vnpeople.css"></vn-css>
<div class="grid" ng-controller="vnPeopleController" ng-init="init();">
    <div class="person" 
         tags="{{ person.location | lowercase }}{{ person.skill | lowercase }}" 
         ng-repeat="person in persons"
         ng-click="handlePersonClick( $event );"
         ng-right-click="handleRightClick( $event );">
        <img ng-src="apps/components/{{ person.image }}">
        <div class="status {{ person.status }}"></div>
    </div>
    
    <div class="menu card">
        <div class="info">
            <div class="name">{{person.shortdescription}}</div>
            <div class="statusarea">
                <div class="status"></div>
                <div class="availability">{{person.statusdescription}}</div>
            </div>
            <div class="role">{{person.role}}</div>
            <div class="location">{{person.locationdescription}}</div>
        </div>
        <div class="action">
            <div>
                <img ng-src="apps/components/images/chat.svg">
            </div>
            <div class="centre">
                <img ng-src="apps/components/images/call.svg">
            </div>
            <div>
                <img ng-src="apps/components/images/favourite.svg">
            </div>
        </div>
    </div>
</div>