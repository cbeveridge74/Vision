.menu.app-menu{
	color: white;
	min-width: 21em;
	min-height: 21em;
	padding: 1em;
	border: solid 0.3em #3B5588;
}

.app-menu .app img {
	position: relative;
}

.app-menu .app {
	width: 6em;
	height: 6em;
	text-align: center;
	margin: 0.3em;
	display: inline-block;
	cursor: pointer;
}

.app-menu .app .name{
	font-size: 0.7em;
	margin-top: 0.7em;
}

.app-menu .app .icon{
	background-color: #1E81E7;
	width: 3em;
	height: 3em;
	margin-left: 1.5em;
	border-radius: 0.5em;
	text-align: center;
	padding-top: 0.3em;
}

.app-menu.open {
	display: inline-block;
	left: 0.5em;
}