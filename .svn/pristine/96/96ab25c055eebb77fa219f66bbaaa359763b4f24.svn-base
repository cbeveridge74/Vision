<div class="tracking-scroller">
    <vn-scroll 
        vn-class-selector="tracking-scroller"
        vn-x-scroll="false"
        vn-watch="screens.VN_TASK"
        vn-top-offset="150">
        <md-whiteframe class="md-whiteframe-z1" layout layout-align="left center" 
            ng-repeat="item in trackingData"
            ng-click="handleTrackingItemClick()">
            <div class="tracking-list-item appointment-item" ng-if="item.trackingevent == 'PATIENT_APPOINTMENT_STATUS_TRACKING'">
            	<div class="title-area">
            		<div class="title">Appointment</div>
            		<div class="status">{{item.eventdata.status}}</div>
            		<div class="date">{{item.eventdata.date | date:'dd-MMM-yyyy'}}</div>
            		<div class="time">({{item.eventdata.date | date:'HH:mm' }})</div>
            		<div class="owner"> with {{item.eventdata.owner}}</div>
            	</div>
            	<div class="patient-name">{{item.eventdata.patient.displayname}}</div>
            	<div class="booker">by {{item.eventdata.bookedby.name}} on {{item.eventdata.bookedby.time | date:'dd-MMM-yyyy HH:mm'}}</div>
            </div>
            <div class="tracking-list-item task-item" ng-if="item.trackingevent == 'TASK_STATUS_TRACKING'">
            	<div class="title-area">
            		<div class="title">{{item.eventdata.tasksubjects.label}}</div>
            		<div class="status">{{taskStatus[ item.eventdata.status ]}}</div>
            		<div class="prep" ng-if="taskStatus[ item.eventdata.status ] == 'ASSIGNED'"> to </div>
            		<div class="assignee">
            			{{item.eventdata.assigeelabel}}
            		</div>
            	</div>
            </div>
	    </md-whiteframe>
    </vn-scroll>
</div>