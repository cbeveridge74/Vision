.card{
	width: 25em;
	vertical-align: bottom;
	box-shadow: 2px 2px 5px #888888;
	margin-bottom: 2em;
	margin-right: 1em;
	border-radius: 3px;
	border: solid #BBBBBB 1px;
	-webkit-transform: translate(0px,0px)}

.card .action-content {
	padding: 0.6em;
	padding-bottom: 0;
	cursor: pointer;
}

.card .action-content:hover{
	background-color: #fdfdfd;
}

.card.pressed{
	
	box-shadow: 1px 1px 2px #888888;
	-webkit-transform: translate(1px,1px);
}

.card .actions {
	height: 1.8em;
	background-color: #2F4B9B;
	color: white;
	margin-right: -1px;
	margin-bottom: -1px;
	border-bottom-right-radius: 3px;
	border-bottom-left-radius: 3px;
	

}

.card .action {
	font-family: Arial;
	padding-top: 0.2em;
	padding-right: 1em;
	padding-left: 1em;
	font-weight: light;
	cursor: pointer;
	
}

.card .left,
.card .right{
	display: inline-block;
	width: 50%;
}

.card .left{
	text-align: left;
}

.card .right{
	text-align: right;
}

.card .action:hover {
	color: #dddddd;
}
