.appointment > div {
	display: inline-flex;
	height: 50px;
	vertical-align: top;
}

.appointment > div > div {
	margin: auto 0;
}

.appointment {

}

.appointment.list-group-item .time {
	//background-color: #20335E;
	
}

.appointment.list-group-item:first-child .time {
	border-top-left-radius: 4px;
}

.appointment.list-group-item:last-child .time {
	border-bottom-left-radius: 4px;
}

.appointment .time > div{
	width: 60px;
	//color: #FFF;
	text-align: center;
}

.appointment .time .date{
	display: none;
}

.appointment .time .date{
	font-size: 0.6em;
	padding-top: 0.5em;
}

.appointment .type{
	width: 1.5em;
	//background-color: red;
	margin-left: -0.25em;
	//color: #FFF;
}

.appointment .type > div{
	padding-left: 0.1em;
	font-size: 0.6em;
}

.appointment .status{
	width: 2em;
	margin-left: 0.5em;
	margin-right: 0.5em;
}

.appointment .status img{
	width: 2em;
	height: 2em;
}

.appointment .status{
	cursor: pointer;
}

.appointment .subject{
	min-width: 15em;
}