.bar {
	height:2.4em;
	width: 100%;
	top: 0;
}

.bar img, .bar > div {
	position: absolute;
	cursor: pointer;
	top: 0.2em;
	color: #FFF;
	height: 24px;
}


.bar .user{
	left: 3em;
	font-size: 1.2em;
}

.bar .user {
	padding-top: 0.15em;
}

.bar .right-button-container{
	position: absolute;
	right: 0.5em;
	top: 0em;
	width:20em;
	text-align: right;
}

.bar .right-button-container img{
	position: relative;
}


.bar .menu {
	position: absolute;
	display: none;
	top: 2em;
	background-color: #073763; 
	z-index: 3;
}

.bar .inps-logo {
	left: 0.5em;
}

.bar .hamburger {
	right: 0.5em;
	z-index: 1;
}

.bar .button{
	opacity: 0.9;
}

.bar .button:hover
{
	opacity: 1;
}