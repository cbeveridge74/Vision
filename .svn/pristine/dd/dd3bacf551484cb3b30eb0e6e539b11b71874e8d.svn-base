.command {
	background-color: #60636A;
}

.command, 
.command > div {
	height: 6em;
	vertical-align: middle;
}

.command{
	position: absolute;
	bottom: -6em;
	width: 100%;
	z-index: 3;
}

.command.open{
	bottom: 0em;
}

.command > div {
	width: 50%;
	display: inline-block;
	text-align: center;
}

.command .button img{
	padding-bottom: 0.5em;
	width: 3em;
}

.command .button {
	margin-top: 0.5em;
	width:7em;
	cursor: pointer;
}

.command .right .button {
	float:right;
}


.command .button{
	opacity: 0.9;
}


.command .button:hover
{
	opacity: 1;
}


.command .button .description
{
	color: white;
	font-size: 0.8em
}



