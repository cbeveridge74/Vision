.vision-reception{
	background-color: #FFFFFF;
	width: 100%;
	height: 100%;
}

.vision-reception .home{
	width: 100%;
}

.vision-reception .content {
	margin: 0 4em 0 6em;
	white-space: nowrap;
	width: 100%;
}


.vision-reception .tasks-cat .task-create,
.vision-reception .tasks-cat .task-simple,
.vision-reception .detail-view,
.vision-reception .create-view{
	left: 15em;
	top: 3em;
	display: none;
}

.vision-reception .tasks-cat .task-create.open,
.vision-reception .tasks-cat .task-simple.open,
.vision-reception .detail-view.open,
.vision-reception .create-view.open {
	display: inline-block;
}

.vision-reception .no-data{
	height: 100%;
	margin-top: 1em;
	font-size: 1.3em;
	text-align: center;
	color: #1e81e7;
}	