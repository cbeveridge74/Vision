.vision-reception{
	background-color: #FFFFFF;
	width: 100%;
	height: 100%;
}

.vision-reception .home{
	width: 100%;
}

.vision-reception .content {
	margin: 0 4em 0 6em;
	white-space: nowrap;
	width: 100%;
}


.vision-reception .tasks-cat .task-create,
.vision-reception .tasks-cat .task-simple {
	left: 15em;
	top: 3em;
	display: none;
}

.vision-reception .tasks-cat .task-create.open,
.vision-reception .tasks-cat .task-simple.open {
	display: inline-block;
}	